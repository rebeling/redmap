.tasktoprintmother
    width 840px
    margin auto

.tasktoprint
    position relative
    width 323px
    height 323px
    float left
    margin 10px
    padding 26px 24px
    font-size 18px
    border solid 1px #ddd

    // .project
    //     font-size 18px
    //     // font-weight bold
    .taskid
        float right
        span
            font-size 10px

    .assigned_to
        position absolute
        bottom 23px
        right 24px


@media print
    @page
        size 210mm 297mm

    .tasktoprint
        width 70mm !important
        height 70mm !important

        h1
            font-size 24px
            margin-top 24px

    html
        margin 0
        // border 1px solid red

    body
        margin 0
        // border 1px solid green

    .btn.sprintprint
        display none

    footer
        display none

    .mainmenu
        display none
